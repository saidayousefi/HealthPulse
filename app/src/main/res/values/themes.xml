<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Button style -->
    <style name="Widget.MaterialComponents.Button" parent="Widget.MaterialComponents.Button" tools:ignore="ResourceCycle">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Widget.MaterialComponents.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
</resources>
